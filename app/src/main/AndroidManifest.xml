<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arjungopisetty.trackyourstack" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddBudgetActivity"
            android:label="@string/title_activity_add_budget"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.arjungopisetty.trackyourstack.MainActivity" />
        </activity>
        <activity
            android:name=".AddNewItemActivity"
            android:parentActivityName="com.arjungopisetty.trackyourstack.ManageBudgetActivity"
            android:label="@string/title_activity_add_new_item" >
        </activity>
        <activity
            android:name=".ManageBudgetActivity"
            android:parentActivityName="com.arjungopisetty.trackyourstack.MainActivity"
            android:label="@string/title_activity_manage_budget" >
        </activity>
    </application>

</manifest>
